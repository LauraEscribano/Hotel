    <!-- ========================== SECCIÓN 2: FILTRO DE BÚSQUEDA ========================== -->

    <div class="sticky-spacer"></div>
    <div class="search-sticky-container">
      <div class="container">
        <div class="search-card">
          <form action="/results" method="GET">
            <div class="row g-2">
              <!-- Selección 1: Destino -->

              <div class="col-12 col-md-6 col-lg-3">
                <label for="destination" class="form-label">Destino</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                  <select class="form-select" id="destination" name="destination" required>
                    <option value="" selected disabled>Seleccione un destino</option>
                    <% for (let group in groupedHotels) { %>
                        <optgroup label="<%= group.split(' - ')[1] %>">
                            <% if (groupedHotels[group].length > 1) { %>
                                <option value="city-<%= group %>" class="city-option">
                                    <i class="fas fa-city"></i> Todos los hoteles de <%= group.split(' - ')[1] %>
                                </option>
                            <% } %>
                            
                            <% groupedHotels[group].forEach(hotel => { %>
                                <option value="hotel-<%= hotel.idHotel %>" class="hotel-option">
                                    <%= hotel.nomHotel %>
                                </option>
                            <% }); %>
                        </optgroup>
                    <% } %>
                </select>
                </div>
              </div>

              <!-- Selección 2: Fecha de LLegada -->

              <div class="col-6 col-md-3 col-lg-2">
                <label for="check-in" class="form-label">Llegada</label>
                <div class="input-group">
                  <span class="input-group-text">
                    <i class="far fa-calendar-alt"></i>
                  </span>
                  <input type="date" class="form-control" id="check-in" name="check-in" required />
                </div>
              </div>

              <!-- Selección 3: Fecha de Salida -->

              <div class="col-6 col-md-3 col-lg-2">
                <label for="check-out" class="form-label">Salida</label>
                <div class="input-group">
                  <span class="input-group-text">
                    <i class="far fa-calendar-alt"></i>
                  </span>
                  <input type="date" class="form-control" id="check-out" name="check-out" required />
                </div>
              </div>

              <!-- Selección 4: Número de Habitaciones -->

              <div class="col-6 col-md-4 col-lg-2">
                <label for="rooms" class="form-label">Habitaciones</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-bed"></i></span>
                  <select class="form-select" id="rooms" name="rooms" required>
                    <option value="1">1 Habitación</option>
                    <option value="2">2 Habitaciones</option>
                    <option value="3">3 Habitaciones</option>
                    <option value="4">4+ Habitaciones</option>
                  </select>
                </div>
              </div>

              <!-- Selección 5: Número de Huéspedes -->

              <div class="col-6 col-md-4 col-lg-3">
                <label for="guests" class="form-label">
                  Huéspedes
                  <span class="text-muted ms-2" style="font-size: 0.85em">
                    <i class="fas fa-info-circle"></i> Máx. 4</span>
                </label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-users"></i></span>
                  <select class="form-select" id="adults" name="adults" required>
                    <option value="1">1 Adulto</option>
                    <option value="2" selected>2 Adultos</option>
                    <option value="3">3 Adultos</option>
                    <option value="4">4 Adultos</option>
                  </select>
                  <select class="form-select" id="children" name="children">
                    <option value="0" selected>0 Niños</option>
                    <option value="1">1 Niño</option>
                    <option value="2">2 Niños</option>
                    <option value="3">3 Niños</option>
                  </select>
                </div>
              </div>

              <!-- Botón de Búsqueda -->
              <div class="col-12 text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 py-2">
                  <i class="fas fa-search me-2"></i>Buscar
                </button>
              </div>
            </div>
          </form>
        </div>
